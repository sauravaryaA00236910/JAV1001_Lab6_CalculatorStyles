<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculatorLayout" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryLightColor</item>
        <item name="colorSecondaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Styles for text views and buttons in the app theme-->
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="materialButtonStyle">@style/AllButtons</item>
        <item name="android:editTextStyle">@style/EditTextMode</item>
    </style>

<!--    Style for text views-->
    <style name="MyTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

<!--    Style for edit text fields-->
    <style name="EditTextMode" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@color/primaryLightest</item>
        <item name="android:textColor">@color/black</item>
    </style>

<!--    Style for all buttons in the layout-->
    <style name="AllButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

<!--    Separate Styles for function buttons-->
    <style name="FunctionButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primaryLightColor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">@color/primaryColor</item>
    </style>

<!--    Individual style for equals button-->
    <style name="EqualButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primaryDarkest</item>
        <item name="rippleColor">@color/EqualButtonsRipple</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>