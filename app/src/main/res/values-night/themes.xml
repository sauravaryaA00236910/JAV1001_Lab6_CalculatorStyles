<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculatorLayout" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Styles for text views and buttons in the app theme-->
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="android:editTextStyle">@style/EditTextMode</item>
    </style>

<!--    style for edit text fields-->
    <style name="EditTextMode" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@color/EditTextNightMode</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <!--    Style for text views-->
    <style name="MyTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <!--    Separate Styles for function buttons-->
    <style name="FunctionButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primaryLightColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">@color/primaryColor</item>
    </style>
</resources>